{
  "permissions": {
    "allow": [
      "WebSearch",
      "Bash",
      "WebFetch"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "playwright"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> .claude/bash-log.txt"
          }
        ]
      }
    ]
  }
}
